@page
@model RegisterModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crie uma nova conta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Input.Utilizador.Nome"></label>
                <input asp-for="Input.Utilizador.Nome" class="form-control" />
                <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (SignInManager.IsSignedIn(User))
            {

                @if (User.IsInRole("Gestor"))
                {
                    @*Escolher um role
                        <div class="form-group">
                        <label  class="control-label"></label>
                        <select  class="form-control" asp-items="ViewBag.RoleFK"></select>
                        <span  class="text-danger"></span>
                    </div>*@
                }
            }




            <button type="submit" class="btn btn-primary">Registar</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
