@model Watch_List.Models.PessoaFilme

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Pessoas nos Filmes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Premio" class="control-label"></label>
                <input asp-for="Premio" class="form-control" />
                <span asp-validation-for="Premio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmeFK" class="control-label"></label>
                <select asp-for="FilmeFK" class ="form-control" asp-items="ViewBag.FilmeFK"></select>
            </div>
            <div class="form-group">
                <label asp-for="PessoaFK" class="control-label"></label>
                <select asp-for="PessoaFK" class ="form-control" asp-items="ViewBag.PessoaFK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <a asp-action="Index">Voltar à página anterior</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
