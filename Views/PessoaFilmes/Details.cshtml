@model Watch_List.Models.PessoaFilme

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Pessoas nos Filmes</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Premio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Premio)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Gestor") || User.IsInRole("Funcionario"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    } |
    <a asp-action="Index">Voltar à página anterior</a>
</div>
