@model Watch_List.Models.PessoaFilme

@{
    ViewData["Title"] = "Apagar";
}

<h1>@ViewData["Title"]</h1>

<h3>Têm a certeza que pretende apagar isto?</h3>
<div>
    <h4>Pessoas nos Filmes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Premio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Premio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
       <a asp-action="Index">Voltar à página anterior</a>
    </form>
</div>
