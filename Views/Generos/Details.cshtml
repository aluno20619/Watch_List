@model Watch_List.Models.Genero

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
  <h4>@Html.DisplayFor(model => model.Nome)</h4>
    <hr />
    <dl class="row">
        @if (Model.ListaDeFilmes.Count == 0) { }

        else
        {
        <dt>
            Titulo
        </dt>

            @foreach (var fil in Model.ListaDeFilmes)
            {
                <dd class="col-sm-2" style="text-align:left;">
                    @fil.Filme.Titulo
                </dd>
            }

        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à página anterior</a>
</div>
