@model Watch_List.Models.FilmeGenero

@{
    ViewData["Title"] = "Detalhes";
}

<h1>@ViewData["Title"]</h1>

<div>
   <h4>Géneros de Filmes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero.Nome)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Gestor") || User.IsInRole("Funcionario"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    }
    |<a asp-action="Index">Voltar à página anterior</a>
</div>
