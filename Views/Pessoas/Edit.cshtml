@model Watch_List.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" name="imagem" accept=".jpg,.jpeg,.png" style="color:blue;" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNasc" class="control-label"></label>
                <input asp-for="DataNasc" class="form-control" />
                <span asp-validation-for="DataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataObi" class="control-label"></label>
                <input asp-for="DataObi" class="form-control" />
                <span asp-validation-for="DataObi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInic" class="control-label"></label>
                <input asp-for="DataInic" class="form-control" />
                <span asp-validation-for="DataInic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nacionalidade" class="control-label"></label>
                <input asp-for="Nacionalidade" class="form-control" />
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="ProfissaoFK" class="control-label"></label>
                <select asp-for="ProfissaoFK" class="form-control" asp-items="ViewBag.ProFK">
                    <option value="0">Escolha uma profissão, por favor.</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à página anterior</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
