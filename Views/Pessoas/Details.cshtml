@model Watch_List.Models.Pessoa

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Imagens/@Html.DisplayFor(modelItem => modelItem.Foto)"
                 width="50"
                 alt="@Html.DisplayFor(modelItem => modelItem.Nome)"
                 title="@Html.DisplayFor(modelItem => modelItem.Nome)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNasc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNasc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataObi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataObi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataInic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nacionalidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nacionalidade)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfissaoFK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfissaoFK)
        </dd>*@
        @if (Model.ListaDeProfissoes.Count == 0) { }
        else
        {
            @foreach (var prof in Model.ListaDeProfissoes)
            {
                <dt class="col-sm-2" style="text-align:left;">
                    @prof.Tarefa
                </dt>
            }

        }
        <dt class="col-sm-10">   <br /> </dt>
        @if (Model.ListaDeFilmes.Count == 0) { }
        else
        {

            @foreach (var fil in Model.ListaDeFilmes)
            {
                <dt class="col-sm-10" style="text-align:center">
                    <img src="~/Imagens/@fil.Filme.Poster" title="@fil.Filme.Poster" height="300" />
                    <br />
                    @fil.Filme.Titulo
                </dt>
            }

        }
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar à página anterior</a>
</div>
